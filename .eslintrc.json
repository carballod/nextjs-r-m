{
  "extends": [
    "next/core-web-vitals",
    "airbnb-typescript/base",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "max-len": ["error", { "code": 150 }],
    "quotes": ["error", "single", { "avoidEscape": true }]
  }
}

